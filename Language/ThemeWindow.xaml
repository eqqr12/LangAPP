<Window x:Class="LanguageApp.ThemeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Граматична тема" Height="550" Width="700" Background="#FAFAFA">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="TheoryText" TextWrapping="Wrap"/>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Content="Перейти до тесту (недоступно)" IsEnabled="False"/>
            <Button Content="Меню" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
